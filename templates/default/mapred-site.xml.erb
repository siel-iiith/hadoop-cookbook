<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in this file. -->

<configuration>

  <property>
    <name>mapred.job.tracker</name>
    <value><%= node['hadoop']['jobtracker'] %>:9000</value>
    <final>true</final>
  </property>

  <property>
    <name>mapred.job.tracker.http.address</name>
    <value><%= node['hadoop']['jobtracker'] %>:50030</value>
    <final>true</final>
  </property>

  <property>
    <name>mapred.local.dir</name>
    <value><%= node['hadoop']['tasktracker_local_dir'] %></value>
    <final>true</final>
  </property>

</configuration>
